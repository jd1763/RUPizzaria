<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ru_pizza_main_menu"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ru_pizza_main_menu"
        android:supportsRtl="true"
        android:theme="@style/Theme.RUPizzaria"
        tools:targetApi="31">
        <activity
            android:name="com.example.pizzeria.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.pizzeria.ChicagoStyleMenuActivity"/>
        <activity android:name="com.example.pizzeria.NYPizzaStyleMenuActivity"/>
        <activity android:name="com.example.pizzeria.CurrentOrderActivity"/>
        <activity android:name="com.example.pizzeria.AllOrdersActivity"/>

    </application>

</manifest>